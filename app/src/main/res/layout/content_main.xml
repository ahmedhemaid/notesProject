<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    android:background="#FFFFFF"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="12dp"
        android:src="@drawable/squar_home"
        ></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="330dp"
        android:textColor="#7B1E58"
        android:textSize="16sp"
        ></TextView>
    <TextView
        android:id="@+id/browse"
        android:layout_width="119dp"
        android:layout_height="46dp"
        android:textSize="34sp"
        android:layout_marginLeft="16dp"
        android:textColor="#000000"
        android:text="Browse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="91dp"
        />
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@+id/browse"
        android:background="#979191"
        ></View>
    <TextView
        android:id="@+id/notebooks_textview"
        android:layout_marginTop="153dp"
        android:layout_width="144dp"
        android:layout_height="27dp"
        android:layout_marginLeft="18dp"
        android:text="Notebooks"
        android:textColor="#000000"
        android:textSize="20sp"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Show All"
        android:layout_marginLeft="289dp"
        android:layout_marginTop="161dp"
        android:textColor="#7B1E58"
        ></TextView>
    <Button
        android:layout_width="90dp"
        android:layout_height="119dp"
        android:background="@drawable/addnotebook"
        android:layout_marginTop="207dp"
        android:layout_marginLeft="23dp"
        ></Button>
<androidx.recyclerview.widget.RecyclerView
    android:layout_width="250dp"
    android:layout_height="166dp"
    android:layout_marginTop="197dp"
    android:layout_marginLeft="137dp"
    android:orientation="horizontal">
</androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="340dp"
        android:gravity="center"
        android:fontFamily="@font/semibold"
        android:text="Create Notebook"
        android:textColor="#7B1E58"
        android:textSize="13sp"
        app:fontFamily="casual"></TextView>
    <TextView
        android:layout_width="100dp"
        android:layout_height="27dp"
        android:text="Notes"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="391dp"
        android:layout_marginLeft="18dp"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Show All"
        android:layout_marginLeft="287dp"
        android:layout_marginTop="393dp"
        android:textColor="#7B1E58"
        ></TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginTop="424dp"
        android:layout_marginHorizontal="16dp"
        ></androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>